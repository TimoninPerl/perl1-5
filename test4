use strict;
use warnings;

# Функция для проверки логина и пароля
sub _login {
    my ( $user_name, $user_password ) = @_;
    
    my %users_prms = (
        Ivan => 'test',
        Petr => 'password',
    );

    if ( exists $users_prms{$user_name} && $users_prms{$user_name} eq $user_password ) {
        return 0; # Пользователь прошел проверку
    } else {
        return -1; # Пользователь не прошел проверку
    }
}

my $error_message;
if ( !defined $user_name ) {
    $error_message = "Не указано имя пользователя\n";
} elsif ( !defined $password ) {
    $error_message = "Не указан пароль\n";
}

if ( $error_message ) {
    print $error_message;
    exit; 
}


# Вызов функции входа и обработка результатов
my $result = _login( $user_name, $password );
if ( $result == 0 ) {
    print "Добро пожаловать, $user_name!\n";
} else {
    print "Неверный логин или пароль.\n";
}
